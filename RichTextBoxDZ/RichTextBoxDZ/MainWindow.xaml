<Window x:Class="RichTextBoxDZ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RichTextBoxDZ"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Content="Bold" Click="BoldButton_Click" />
            <Button Content="Italic" Click="ItalicButton_Click" />
            <Button Content="Underline" Click="UnderlineButton_Click" />
            <Button Content="Clear" Click="ClearButton_Click" />
            <Button Content="Font 15" Click="Font15Button_Click" />
            <Button Content="Font 30" Click="Font30Button_Click" />
            <Button Content="Red Color" Click="RedColorButton_Click" />
            <Button Content="Green Color" Click="GreenColorButton_Click" />
            <Button Content="Blue Color" Click="BlueColorButton_Click" />
        </StackPanel>

        <RichTextBox Grid.Row="1" x:Name="RichTextBox" />
    </Grid>
</Window>
