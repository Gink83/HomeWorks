<Window x:Class="CalculatorGridDZ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorGridDZ"
        mc:Ignorable="d"
        Title="MainWindow" Height="561" Width="224" Background="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" HorizontalAlignment="Right" Margin="0,5">
            <TextBlock Text="10*10" FontSize="48" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="White" />
        </Grid>

        <Grid Grid.Row="1" HorizontalAlignment="Right" Margin="0,5">
            <TextBlock Text="=10" FontSize="18" VerticalAlignment="Center" Foreground="#FFCACACA" />
        </Grid>

        <Grid Grid.Row="2" Margin="5,10,5,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Margin="0,0,5,5" Content="С" FontSize="40" Height="65" Width="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFFF6B32" />
            <Button Grid.Row="0" Grid.Column="1" Margin="5,0,5,5" Content="←" FontSize="40" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFFF6B32" />
            <Button Grid.Row="0" Grid.Column="2" Margin="5,0,5,5" Content="%" FontSize="40" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFFF6B32" />
            <Button Grid.Row="0" Grid.Column="3" Margin="5,0,0,5" Content="÷" FontSize="40" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFFF6B32" />

            <Button Grid.Row="1" Grid.Column="0" Margin="0,5,5,5" Content="7" FontSize="40" Foreground="White" BorderBrush="{x:Null}" Background="{x:Null}" />
            <Button Grid.Row="1" Grid.Column="1" Margin="5,5,5,5" Content="8" FontSize="40" Height="75" Width="50" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="White"/>
            <Button Grid.Row="1" Grid.Column="2" Margin="5,5,5,5" Content="9" FontSize="40" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" />
            <Button Grid.Row="1" Grid.Column="3" Margin="5,5,0,5" Content="*" FontSize="40" Foreground="#FFFF6B32" BorderBrush="{x:Null}" Background="{x:Null}" />

            <Button Grid.Row="2" Grid.Column="0" Margin="0,5,5,5" Content="4" FontSize="40" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" />
            <Button Grid.Row="2" Grid.Column="1" Margin="5,5,5,5" Content="5" FontSize="40" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" />
            <Button Grid.Row="2" Grid.Column="2" Margin="5,5,5,5" Content="6" FontSize="40" Height="75" Width="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"/>
            <Button Grid.Row="2" Grid.Column="3" Margin="5,5,0,5" Content="-" FontSize="40" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="#FFFF6B32" />

            <Button Grid.Row="3" Grid.Column="0" Margin="0,5,5,5" Content="1" FontSize="40" Height="75" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" />
            <Button Grid.Row="3" Grid.Column="1" Margin="5,5,5,5" Content="2" FontSize="40" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" />
            <Button Grid.Row="3" Grid.Column="2" Margin="5,5,5,5" Content="3" FontSize="40" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" />
            <Button Grid.Row="3" Grid.Column="3" Margin="5,5,0,5" Content="+" FontSize="40" Foreground="#FFFF6B32" BorderBrush="{x:Null}" Background="{x:Null}" />

            <Button Grid.Row="4" Grid.Column="0" Margin="0,5,5,0" Content="©" FontSize="40" Height="75" Width="50" Foreground="#FFFF6B32" BorderBrush="{x:Null}" Background="{x:Null}" />
            <Button Grid.Row="4" Grid.Column="1" Margin="5,5,5,0" Content="0" FontSize="40" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" />
            <Button Grid.Row="4" Grid.Column="2" Margin="5,5,5,0" Content="," FontSize="40" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" />
            <Button Grid.Row="4" Grid.Column="3" Margin="5,5,0,0" Content="=" FontSize="40" Height="75" Width="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFFF6B32" />
        </Grid>
    </Grid>
</Window>
